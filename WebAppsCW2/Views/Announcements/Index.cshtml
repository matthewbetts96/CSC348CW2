@model IEnumerable<WebAppsCW2.Models.Announcement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @if (ViewContext.HttpContext.User.IsInRole("Lecturer"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })<b>|</b>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })<b>|</b>
            }          
            @Html.ActionLink("View Comments", "Details", new { id = item.ID })
            
        </td>
    </tr>
}

</table>
